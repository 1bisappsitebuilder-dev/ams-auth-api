type Colors {
  primary   String?
  secondary String?
  accent    String?
  success   String?
  warning   String?
  danger    String?
  info      String?
  light     String?
  dark      String?
  neutral   String?
}

type Branding {
  logo       String?
  background String?
  font       String?
  colors     Colors?
}

model Organization {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  code        String
  description String?
  status      Status    @default(active)
  branding    Branding?
  isDeleted   Boolean @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  users User[]
  apps  OrganizationApp[]
}
