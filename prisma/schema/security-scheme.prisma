// securityScheme.prisma
enum Action {
  create
  read
  update
  delete
}

type RolePermission {
  resource String
  actions  Action[]
}

type RoleDefinition {
  roleName    String
  permissions RolePermission[] // embedded permissions
}

model SecurityScheme {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  roles       RoleDefinition[] // embedded definitions
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  //relations
  organizations Organization[]
}
