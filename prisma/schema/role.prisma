enum RoleType {
  organization
  project
}

model Role {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String    @unique
  description String?
  type        RoleType  @default(organization)
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  users       UserRole[]
  permissions Permission[] // Link to Security Schemes through join table

  // Indexes
  @@index([deletedAt])
  @@index([createdAt])
  @@index([name, deletedAt])
}
