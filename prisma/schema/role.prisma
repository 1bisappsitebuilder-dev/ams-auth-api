model Role {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String    @unique
  description String?
  userIds     String[]  @db.ObjectId
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  //relations
  users       User[]    @relation(fields: [userIds], references: [id])
}
